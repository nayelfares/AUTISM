<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_more"
        android:background="@color/transparent"
        android:id="@+id/row_trainerMore"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:background="@color/transparent"
        android:src="@color/black"
        android:id="@+id/row_trainerImage"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nayel Fares"
        android:textSize="16sp"
        android:id="@+id/row_trainerName"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/row_trainerImage"
        android:layout_marginBottom="8dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nayel Fares"
        android:textSize="16sp"
        android:id="@+id/row_trainerLocation"
        android:textStyle="italic"
        android:drawableStart="@drawable/ic_gps"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/row_trainerName"
        android:textColor="@color/black"/>
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:id="@+id/rating"
        android:numStars="5"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_alignParentStart="true"
        android:layout_below="@id/row_trainerName"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:layout_gravity="center"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/row_trainerLocation"
        android:src="@drawable/dotted"
        android:layerType="software" />
</RelativeLayout>